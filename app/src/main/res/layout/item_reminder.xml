<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="@string/app_name" />

    <ImageView
        android:id="@+id/share_button"
        android:layout_alignBottom="@+id/text_view_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/margin_med"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_share_menu_grey"
        />

    <TextView
        android:layout_below="@+id/text_view_title"
        android:id="@+id/text_view_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/app_name" />

    <TextView
        android:layout_below="@+id/text_view_content"
        android:id="@+id/notify_text_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/app_name" />

    <LinearLayout
        android:layout_below="@+id/notify_text_view_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reminder_from" />

        <TextView
            android:id="@+id/text_reminder_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small" />
    </LinearLayout>

</RelativeLayout>
